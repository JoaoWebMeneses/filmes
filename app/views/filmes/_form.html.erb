<%= form_with(model: filme) do |form| %>
  <% if filme.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(filme.errors.count, "error") %> está (estão) proibindo o salvamento:</h2>

      <ul>
        <% filme.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label :ano, style: "display: block" %>
    <%= form.date_field :ano %>
  </div>

  <div>
    <%= form.label :desc, style: "display: block" %>
    <%= form.text_area :desc %>
  </div>

  <div>
    <%= form.label :nota, style: "display: block" %>
    <%= form.number_field :nota, step: 0.01 %>
  </div>

  <div>
    <%= form.label :cartaz, style: "display: block" %>
    <%= form.file_field :cartaz %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
